<body id='home'>
<div id='container'>

<div id='banner'>
	<h1>Tobacco Patents</h1>
	<h2>Fast, easy searches of tobacco-related patents</h2>
</div>

<div id="home-search">
	<form method="get" id="searchform" action="{{ path('patent_list') }}">
		<fieldset id="search">
			<input name='q' id='q' type="text" value="{{ app.request.get('q', '') }}" />
			<input id='search-submit' type='submit' value='Search' />
		</fieldset>
	</form>
</div>

<div style="clear: both;">
{% block body %}
{% endblock %}
</div>

</div><!-- container -->

	<div id="footer">
    <p><strong>(c) Roswell Park Cancer Institute</strong><br />
