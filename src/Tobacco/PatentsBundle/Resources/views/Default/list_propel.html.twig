{% extends "TobaccoPatentsBundle::layout.html.twig" %}

{% block body %}
Welcome to Tobacco Patents (Propel Listing, withPager)

<h3>List {{ tags }}</h3>
<i>{{ pager.getNbResults }} results, {{ pager.getNbPages }} pages.</i><br />
<ul class="listing">
{% for p in patents %}
<li>{{ p.title }} / {{ p.tags }}</li>
{% endfor %}
</ul>

<div class="pagerfanta">
    {{ pagerfanta( pager) }}
</div>

<form action='{{ path('_patent_search') }}'>
Search for: <input size='80'>
<input type='submit' value='Search'>
</form>

{% endblock %}
